@model LoginModel 
@{

	Layout = "_LayoutDeslogado";
	ViewData["Title"] = "Login";
    
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>
}

 <div class="container" >
      
    <div class="content">      
      <!--FORMULÁRIO DE LOGIN-->
      <div id="login">
        
        <form asp-controller="Login" asp-action="Entrar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <h1>Login</h1> 

         <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input type="text" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
                
         </div>
          
         <div class="form-group">
                <label asp-for="Senha" class="control-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
                
         </div>
          
        
          <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
          </div>
          
          <p class="link">
            Ainda não tem conta?
             <a asp-area="" asp-controller="Usuario" asp-action="Create">Cadastre-se</a>
          </p>
        </form>
      </div>
     
      </div>
</div>