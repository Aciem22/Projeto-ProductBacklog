@model BancoMusica.Models.Musica

@{
    ViewData["Title"] = "Delete";
}

<h3>Voce tem certeza que deseja deletar essa atividade?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label>Titulo</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class = "col-sm-2">
            <label>Descrição</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class = "col-sm-2">
            <label>Data de finalização</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt class = "col-sm-2">
            <label>Grau de importancia</label>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video)
        </dd>


    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista</a>
    </form>
</div>
