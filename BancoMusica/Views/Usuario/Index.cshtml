@model List<UsuarioModel>
@{
    ViewData["Title"] = "Listagem de usuario";
}

<div class="text-center">
    <h1 class="display-4">Olá </h1>
    <a class="btn btn-primary" asp-controller="Usuario" asp-action="Create" role="button">Adicionar novo usuario</a>
</div>
<br /> <br/> <br/> <br/>
<div class="row">
    <div class="col-md-4">
        <h2>Listagem de usuários</h2>
            <table id="table-usuarios" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nome</th>
                        <th scope="col">Perfil</th>
                    </tr>
                </thead>
                <tbody>
                @if(Model!=null && Model.Any())
                {
                    foreach(var usuario in Model)
                    {
                        <tr>
                            <th scope="row">@usuario.Id</th>
                            <td>@usuario.Nome</td>
                            <td>@usuario.Perfil</td>
                            <td>
                               <div class="btn-group" role="group">
                                   <a role="button" asp-action="Apagar" asp-asp-controller="Usuario" asp-route-id="@usuario.Id">Apagar</a>
                               </div> 
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>Nenhum usuario encontrado</tr>
                }
            </tbody>
            </table>


    </div>
    
</div>
