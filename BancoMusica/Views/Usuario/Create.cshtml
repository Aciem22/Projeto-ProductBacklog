@using BancoMusica.Enum;
@model BancoMusica.Models.UsuarioModel

@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Criar usuário";
}

<hr />


    <div class="container" >
      
    <div class="content">      
      <!--FORMULÁRIO DE CADASTRO-->
      <div id="Cadastro">
        
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <h1>Cadastro</h1> 

         <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
          
         <div class="form-group">
                <label asp-for="Senha" class="control-label">Senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
          
           <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
          
          <p class="link">
            Ja possui conta?
             <a asp-area="" asp-controller="Login" asp-action="Index">Logar</a>
          </p>
        </form>
      </div>
     
      </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
